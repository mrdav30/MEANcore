{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "client",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@env/*": ["environments/*"],
      "core-js/es6/*": ["../node_modules/core-js/es/*"],
      "core-js/es7/*": ["../node_modules/core-js/es/*"]
    }
  }
}
